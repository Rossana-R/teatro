<link href="/assets/css/components/tabs-accordian/custom-tabs.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="row">
        <div class="col-12 card">
            <div class="card-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <p class="text-muted">Total a pagar: {{data.cancelationRef.mount_total}} <b>{{data.cancelationRef.mount_unity}}</b></p>
                            <form method="post" action="/event/{{data.cancelationRef.cancelationId}}/set/payment">
                                <div class="form-group col-12">
                                    <label for="t-pdate" class="">Fecha</label>
                                    <input id="t-pdate" type="date" name="date" class="form-control" required>
                                </div>  
                                <div class="form-group col-12">
                                    <label for="t-pcode" class="">Código</label>
                                    <input id="t-pcode" type="text" name="code" class="form-control" required>
                                </div> 
                                <div class="form-group col-12">
                                    <label for="t-pmount" class="">Monto (unidades de{{data.cancelationRef.mount_unity}})</label>
                                    <input id="t-pmount" type="number" name="mount" class="form-control" required>
                                </div> 
                                <div class="form-group col-12">
                                    <label for="t-ppercentage" class="">Porcentaje</label>
                                    <input id="t-ppercentage" type="text" name="percentage" class="form-control" required>
                                </div> 

                                <input type="hidden" value="{{data.cancelationRef.mount_unity}}" name="mount_unity" />
                                <input type="hidden" value="{{data.cancelationRef.mount_total}}" name="mount_total" />
                                <input type="hidden" value="{{data.cancelationRef.description}}" name="description" />

                                <input type="submit" class="mt-3 btn btn-primary" value="ingresar" >
                            </form>

                        </div>

                        <div class="col-12 col-lg-8">
                            <ul class="nav nav-tabs  mb-3 mt-3" id="simpletab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="list-tab" data-toggle="tab" href="#list" role="tab" aria-controls="list" aria-selected="true">
                                        <i class="bi bi-list mr-3"></i>
                                        lista
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" id="update-pay-tab" data-toggle="tab" href="#update-pay" role="tab" aria-controls="update-pay" aria-selected="false">
                                        <i class="bi bi-pen-fill mr-3"></i>
                                        Actualizar
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content" id="simpletabContent">

                                <div class="tab-pane fade show active" id="list" role="tabpanel" aria-labelledby="list-tab">                                    
                                    {{#if data.cancelationRef.cancelationRef}}
                                        <table class="table table-striped table-sm">
                                            <thead>
                                                <tr>
                                                    <td>Fecha</td>
                                                    <td>Código</td>
                                                    <td>Monto</td>
                                                    <td>Porcentaje</td>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {{#each data.cancelationRef.cancelationRef}}
                                                <tr>
                                                    <td>{{this.date}}</td>
                                                    <td>{{this.code}}</td>
                                                    <td>{{this.mount}}</td>
                                                    <td>{{this.percentage}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                    {{else}}
                                        <p class="lead text-muted">No hay registros</p>
                                    {{/if}}
                                </div>

                                <div class="tab-pane fade" id="update-pay" role="tabpanel" aria-labelledby="update-pay-tab">
                                    <form class="col-12" method="post" action="/event/{{data.eventId}}/create/cancelation">
                                        <div class="form-group col-12">
                                            <label for="t-description" class="">Descripción del pago</label>
                                            <input value="{{data.cancelationRef.description}}" id="t-description" type="text" name="description" class="form-control" required>
                                        </div>  
                                        <div class="form-group col-12">
                                            <label for="t-mount_total" class="">Monto total (numero)</label>
                                            <input value="{{data.cancelationRef.mount_total}}" id="t-mount_total" type="number" name="mount_total" class="form-control" required>
                                        </div>  
                                        <div class="form-group col-12">
                                            <label for="t-mount_unity" class="">Monto total (unidad medida)</label>
                                            <input value="{{data.cancelationRef.mount_unity}}" id="t-mount_unity" type="text" name="mount_unity" class="form-control" required>
                                        </div>

                                        <div class="form-group col-12">
                                            <label for="t-isCash" class="">Es dinero?</label>
                                            <input type="checkbox" value="{{data.cancelationRef.isCash}}" id="t-isCash" type="text" name="isCash" class="form-control">
                                        </div>    

                                        isCash

                                        <button type="submit" class="btn btn-primary">agregar</button>
                                    </form>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
