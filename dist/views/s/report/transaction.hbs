<div class="container">
    <div class="row">
        <form action="/report/transaction" method="GET" class="col-12 card">
            <div class="card-body">

                <label class="w-100">
                    <span>AÃ±o</span>
                    <select type="text" name="currentYear" class="form-control w-full">
                        <option value="" selected>seleccione un mes</option>
                        {{#each years}}
                            <option>{{this.year}}</option>
                        {{/each}}
                    </select>
                </label>

                <label class="w-100">
                    <span>Mes</span>
                    <select type="text" name="month" class="form-control w-full">
                        <option value="" selected>seleccione un mes</option>
                        <option value="01">Enero</option>
                        <option value="02">Febrero</option>
                        <option value="03">Marzo</option>
                        <option value="04">Abril</option>
                        <option value="05">Mayo</option>
                        <option value="06">Junio</option>
                        <option value="07">Julio</option>
                        <option value="08">Agosto</option>
                        <option value="09">Septiembre</option>
                        <option value="10">Octubre</option>
                        <option value="11">Noviembre</option>
                        <option value="12">Diciembre</option>
                    </select>
                </label>
                
                <label class="w-100">
                    <span>Tipo</span>
                    <select type="text" name="type" class="form-control w-full">
                        <option value="" selected>seleccione un estado</option>
                        {{#each type}}
                            <option value="{{this.transactionTypeId}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </label>

                <label class="w-100">
                    <span>Categoria</span>
                    <select type="text" name="category" class="form-control w-full">
                        <option value="" selected>seleccione un estado</option>
                        {{#each category}}
                            <option value="{{this.transactionCategoryId}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </label>

                <input type="submit" value="Generar Reporte" class="btn btn-primary" />
            </div>            
        </form>
    </div>

    {{#if file}}
        <h4 class="mt-4">Filtros</h4>
        <ul>
            <li>Resutlados: {{count}}</li>
            {{#each filter}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <div class="row mt-3">
            <a href="{{file.download}}" target="_blank" class="btn btn-danger">Descargar reporte</a>
        </div>
    {{/if}}

</div>