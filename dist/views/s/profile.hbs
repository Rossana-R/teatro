                    <span>Apellido</span>
                    <input type="text" name="lastname" value="{{user.lastname}}" class="form-control w-full" />
                </label>
                <label class="w-100">
                    <span>Usuario</span>
                    <input type="text" name="username" value="{{user.username}}" class="form-control w-full" />
                </label>
                <label class="w-100">
                    <span>Correo</span>
                    <input type="email" name="email" value="{{user.email}}" class="form-control w-full" />
                </label>
                <button type="submit" class="btn btn-primary">
                    actualizar
                </button>
            </form>
        </div>
