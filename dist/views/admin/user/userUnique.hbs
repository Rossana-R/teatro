
<div class="flex flex-col p-5 lg:lg-10">
    <section class="flex justify-end items-center mb-5">
        <a href="/users" class="px-6 py-2 rounded-md bg-amber-400 hover:bg-amber-500 font-bold">volver</a>
    </section>

    {{#if userUnique}}
        <section>
            <div class="relative h-[auto] flex flex-col items-center rounded-[20px] bg-white w-full pb-4">
                <div class="w-full">
                    <img src="/teatro.jpg" class="h-[170px] w-full object-cover rounded-t-[20px]" />
                </div>
                <div class="absolute rounded-full w-[180px] p-2 bg-white">
                    <img src="/{{userUnique.photo_id}}" class="w-full rounded-full" />
                </div>
                <div class="font-bold text-[19px] text-gray-700 mt-16">{{userUnique.username}}</div>
                <div class="font-light text-[15px] text-gray-500">{{userUnique.email}}</div>
                <div class="font-light text-[12px] text-gray-500">ID: <span class="font-bold">{{userUnique._id}}</span></div>
                <div class="font-light grid text-[10px] px-5 mt-5 text-gray-500">
                    <span class="font-bold text-center">fecha de creación:</span>
                    {{userUnique.create_at}}
                </div>
                <div class="font-light grid text-[10px] px-5 text-gray-500">
                    <span class="font-bold text-center">ultima actialización:</span>
                    {{userUnique.update_at}}
                </div>
            </div>
        </section>
    {{else}}
        <section class="px-10 font-light text-lg  text-gray-700">
            No hay usuario
        </section>
    {{/if}}

</div>
