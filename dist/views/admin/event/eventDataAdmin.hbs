
<main class="">
    <h2 class="w-full text-center text-2xl text-light text-gray-700">Administración del evento</h2>

    <form method="POST" action="/event/update/admin/{{event._id}}" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 p-5 lg:px-10 gap-5">
        <div class="w-full">
            <p>fecha del evento:<b>{{event.admin_date}}</b></p>
            <p>hora de inicio:<b>{{event.admin_datetime_start}}</b></p>
            <p>hora de finalización:<b>{{event.admin_datetime_end}}</b></p>
        </div>
        <label class="col-span-3">
            <span class="text-lg text-gray-800">Codigo de reserva</span>
            <input name="admin_code" class="outline-none w-full px-3 py-2 rounded-md" type="text" value="{{event.admin_code}}"  />
        </label>
        {{!-- <label class="">
            <span class="text-lg text-gray-800">Fecha y hora de inicio</span>
            <input class="outline-none w-full px-3 py-2 rounded-md" type="datetime-local" value="{{event.admin_date}}T{{event.admin_datetime_start}}"  />
        </label>
        <label>
            <span class="text-lg text-gray-800">Fecha y hora de fin</span>
            <input class="outline-none w-full px-3 py-2 rounded-md" type="datetime-local" value="{{event.admin_date}}T{{event.admin_datetime_end}}"  />
        </label> --}}
        <label class="col-span-3">
            <span class="text-lg text-gray-800 max-w-full">Observación</span>
            <textarea name="admin_observation" class="outline-none w-full px-3 py-2 rounded-md max-h-[150px]" type="text" value="{{event.admin_code}}">{{event.admin_observation}}</textarea>
        </label>

        {{>inputSubmit}}
    </form>

    <h2 class="w-full text-center text-2xl text-light text-gray-700 mt-10">Pago</h2>

    <form method="POST" action="/event/update/payment/{{event._id}}" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 p-5 lg:px-10 gap-5">
        <label class="col-span-3">
            <span class="text-lg text-gray-800">Método de pago</span>
            <select name="admin_arancel" class="outline-none w-full px-3 py-2 rounded-md bg-white" type="text" value="{{event.admin_code}}">
                <option class="" value="ARANCEL">{{event.admin_arancel}}</option>
                <option class="" value="ARANCEL">Arancel</option>
                <option class="" value="APORTE">Aporte</option>
                <option class="" value="APOYO INSTITUCIONAL">Apoyo institucional</option>
            </select>
        </label>
        {{>inputSubmit}}
    </form>
</main>
