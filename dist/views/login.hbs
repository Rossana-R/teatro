
<section class="min-h-screen w-full grid place-items-center p-10">
    <form class="bg-white p-5 rounded-[20px] w-full lg:w-[50%]" action="/login" method="POST">
        <h2 class="text-center text-3xl font-light text-gray-800">Inicia Sesión</h2>

        <div class="grid place-items-center mt-5">
            <label class="block text-gray-800 font-semibold text-sm"
                >Correo Electrónico</label
            >
            <div class="mt-2">
                <input
                    type="email"
                    name="email"
                    class="block w-80 rounded-md py-1.5 px-2 ring-1 ring-inset ring-gray-400 focus:text-gray-800"
                />
            </div>
            <label class="pt-1 block text-gray-500 text-sm">ingrese su correo electrónico personal</label>
        </div>

        <div class="grid place-items-center mt-5">
            <label class="block text-gray-800 font-semibold text-sm"
                >Contraseña</label
            >
            <div class="mt-2">
                <input
                    type="password"
                    name="password"
                    class="block w-80 rounded-md py-1.5 px-2 ring-1 ring-inset ring-gray-400 focus:text-gray-800"
                />
            </div>
            <label class="pt-1 block text-gray-500 text-sm">ingrese su contraseña segura</label>
        </div>

        <button type="submit" class="w-full mt-5 flex items-center justify-center cursor-pointer">
            <div
                class="relative inline-flex items-center justify-start py-3 pl-4 pr-12 overflow-hidden font-semibold shadow text-indigo-600 transition-all duration-150 ease-in-out rounded hover:pl-10 hover:pr-6 bg-gray-50 dark:bg-gray-700 dark:text-white dark:hover:text-gray-200 dark:shadow-none group"
            >
                <span class="absolute bottom-0 left-0 w-full h-1 transition-all duration-150 ease-in-out bg-indigo-600 group-hover:h-full"></span>
                <span
                class="absolute right-0 pr-4 duration-200 ease-out group-hover:translate-x-12">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" class="w-5 h-5 text-green-400">
                    <path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" ></path>
                </svg>
                </span>
                <span class="absolute left-0 pl-2.5 -translate-x-12 group-hover:translate-x-0 ease-out duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" class="w-5 h-5 text-green-400">
                        <path
                        d="M14 5l7 7m0 0l-7 7m7-7H3"
                        stroke-width="2"
                        stroke-linejoin="round"
                        stroke-linecap="round"
                        ></path>
                    </svg>
                </span>
                <span class="relative w-full text-left transition-colors duration-200 ease-in-out group-hover:text-white dark:group-hover:text-gray-200">Entrar</span>
            </div>
        </button>

    </form>
</section>
