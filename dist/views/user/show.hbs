<link href="/assets/css/users/user-profile.css" rel="stylesheet" type="text/css" />

<div class="user-profile">
    <div class="widget-content widget-content-area row">
        <div class="text-center user-info col-6">
            <img src="/{{userData.photo_id}}" class="" style="width: 100%; height: 60vh; object-fit: cover;" width="" alt="avatar">
        </div>
        <div class="user-info-list col-6">
            <div class="">
                <div class="d-flex justify-content-between">
                    <h2>{{userData.username}}</h2>
                    <button class="btn btn-primary"> <i class="bi bi-arrow-left mx-2"></i> volver </button>
                </div>
                <ul class="contacts-block list-unstyled">
                    <li class="contacts-block__item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-coffee"><path d="M18 8h1a4 4 0 0 1 0 8h-1"></path><path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path><line x1="6" y1="1" x2="6" y2="4"></line><line x1="10" y1="1" x2="10" y2="4"></line><line x1="14" y1="1" x2="14" y2="4"></line></svg>{{userData.username}}
                    </li>
                    <li class="contacts-block__item">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                        {{#formatDate userData.create_at}}
                            {{this}}
                        {{/formatDate}}
                    </li>
                </ul>
            </div>                                    
        </div>
    </div>
</div>