{{> public/header }}

<section class="hero-section hero-section-full-height d-flex justify-content-center align-items-center">
    <div class="section-overlay"></div>

    <div class="container">
        <div class="row">

            <div class="col-lg-7 col-12 text-center mx-auto">
                <h1 class="cd-headline rotate-1 text-white mb-4 pb-2">
                    <span class="col-12 text-center">{{data.event_name}}</span>
                    <span class="col-12 text-center cd-words-wrapper">
                        <b class="is-visible">{{data.admin_status}}</b>
                    </span>
                </h1>
            </div>

        </div>
    </div>

    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="#ffffff" fill-opacity="1" d="M0,224L40,229.3C80,235,160,245,240,250.7C320,256,400,256,480,240C560,224,640,192,720,176C800,160,880,160,960,138.7C1040,117,1120,75,1200,80C1280,85,1360,139,1400,165.3L1440,192L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z"></path></svg>
</section>


<main class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-md-6">
                    <ul class="">
                        <li class="list-unstyled">
                            <span class="h5">Fecha</span>
                        </li>   
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>

                            {{#SepareTDate "Inicio" data.event_datetime_tiem_start}}
                                {{this}}
                            {{/SepareTDate}}

                        </li>
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            {{#SepareTDate "Cierre" data.event_datetime_tiem_end}}
                                {{this}}
                            {{/SepareTDate}}
                        </li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="">
                        <li class="list-unstyled ">
                            <span class="h5">Responsable</span>
                        </li>
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            <b>{{data.fullname}}</b>
                        </li>
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            <b>{{data.phone}}</b>
                        </li>
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            <b>{{data.email}}</b>
                        </li>
                        <li class="list-unstyled">
                            <div class="icon-svg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
                            </div>
                            <b>{{data.address}}</b>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-12 fq-article-section">
            <h2>Información</h2>
            <div class="row">

                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Áreas reservadas</h5>
                            <p class="card-text">
                                {{#CheckArea "Sala" data.room}}
                                    {{this}}
                                {{/CheckArea}}
                                {{#CheckArea "Cafe/Bar" data.coffe_bar}}
                                    {{this}}
                                {{/CheckArea}}
                                {{#CheckArea "VIP" data.vip}}
                                    {{this}}
                                {{/CheckArea}}
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6 mb-lg-0 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Pago total</h5>
                            <p class="card-text">
                                <p>monto: <b>{{data.cancelationRef.mount_total}}</b></p>
                                <p>medida: <b>{{data.cancelationRef.mount_unity}}</b></p>
                                <p>descripción: <b>{{data.cancelationRef.description}}</b></p>
                            </p>
                        </div>
                    </div>
                </div>

                {{!-- <div class="col-12 mb-md-0 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Avances de pago</h5>
                            <div class="card-text">
                                {{#each data.cancelationRef.cancelationRef}}
                                    <p class="col-12 row container border">
                                        <span class="col-3 text-center">{{this.date}}</span>
                                        <span class="col-3 text-center border-left">{{this.code}}</span>
                                        <span class="col-3 text-center border-left">{{this.mount}}</span>
                                        <span class="col-3 text-center border-left">{{this.percentage}}%</span>
                                    </p>
                                {{/each}}
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div> --}}

            </div>

        </div>
    </div>
</main>


{{> public/footer }}

