
<main class="min-h-screen grid place-items-center bg-cover bg-no-repeat p-3 lg:p-8">
    <div class="w-full lg:w-3/4 h-full bg-white rounded-[20px] p-5">
        

        {{!-- crear evento --}}
        <form method="POST" action="/event/{{evt._id}}/update">
            <h2 class="text-xl text-bold text-center text-gray-700">Actualizar evento</h2>

            <div class="my-2">
                <h3 class="text-lg text-gray-600">Datos del responsable</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">

                    <label class="grid">
                        <span class="text-md text-gray-700">Nombre completo:</span>
                        <input type="text" value="{{evt.fullname}}" name="fullname" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Cédula de identidad:</span>
                        <input type="text" value="{{evt.ci}}" name="ci" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Dirección:</span>
                        <input type="text" value="{{evt.address}}" name="address" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Telefono:</span>
                        <input type="text" value="{{evt.phone}}" name="phone" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Correo electrónico:</span>
                        <input type="email" value="{{evt.email}}" name="email" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>

                </div>
            </div>

            <div class="my-2">
                <h3 class="text-lg text-gray-600">Datos del evento</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">

                    <label class="grid">
                        <span class="text-md text-gray-700">Tipo de evento:</span>
                        <select name="event_type" class="border outline-none px-3 py-2 runded-md text-gray-800">
                            <option selected value="{{evt.event_type}}">selecciona una opcion</option>
                            <option value="PUBLICO">Público</option>
                            <option value="PRIVADO">Privado</option>
                        </select>
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Nombre del evento:</span>
                        <input type="text" value="{{evt.event_name}}" name="event_name" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Cantidad de personas:</span>
                        <input type="number" value="{{evt.event_quantity_people}}" name="event_cuantity_people" class="border outline-none px-3 py-2 runded-md text-gray-800" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Caracter:</span>
                        <select name="event_character" class="border outline-none px-3 py-2 runded-md text-gray-800">
                            <option selected value="{{evt.event_character}}">selecciona una opcion</option>
                            <option value="APOYO">Apoyo</option>
                            <option value="PRIVADO">Privado</option>
                            <option value="ARANCEL">Arancel</option>
                        </select>
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Entrada Paga:</span>
                        <input type="checkbox" checked="{{evt.event_intro}}" name="event_intro" class="" />
                    </label>
                    <label class="grid">
                        <span class="text-md text-gray-700">Costo de la entrada:</span>
                        <input type="number" value="{{evt.event_cost}}" name="event_cost" class="border outline-none px-3 py-2 runded-md text-gray-800" value="0" />
                    </label>
                </div>
            </div>

            <div class="my-2">
                <h3 class="text-lg text-gray-600">Áreas a reservar</h3>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3">

                    <label class="grid place-items-center">
                        <span class="text-md text-gray-700">Sala:</span>
                        {{#if evt.event_area.room }}
                            <input type="checkbox" checked="{{evt.event_area.room}}" name="event_area_room" class="" />
                        {{else}}
                            <input type="checkbox" name="event_area_room" class="" />
                        {{/if}}
                    </label>
                    <label class="grid place-items-center">
                        <span class="text-md text-gray-700">cafe/bar:</span>
                        {{#if evt.event_area.coffee_bar }}
                            <input type="checkbox" checked="{{evt.event_area.coffe}}" name="event_area_coffe" class="" />
                        {{else}}
                            <input type="checkbox" name="event_area_coffe" class="" />
                        {{/if}}
                    </label>
                    <label class="grid place-items-center">
                        <span class="text-md text-gray-700">V.I.P:</span>
                        {{#if evt.event_area.vip }}
                            <input type="checkbox" checked="{{evt.event_area.vip}}" name="event_area_vip" class="" />
                        {{else}}
                            <input type="checkbox" name="event_area_vip" class="" />
                        {{/if}}
                    </label>

                </div>
            </div>

            <input type="hidden" name="datetime_start" id="datetime_start" />
            <input type="hidden" name="datetime_end" id="datetime_end" />
            <input type="hidden" name="datetime" id="datetime" />

            {{>inputSubmit}}
        </form>

    </div>
</main>
